    <groupId>uk.ac.ebi.ep</groupId>
    <artifactId>ep</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>EnzymePortalProject</name>
    <url>http://enzymeportal.sf.net</url>
    <organization>
        <name>EMBL-EBI</name>
        <url>http://www.ebi.ac.uk</url>
    </organization>
    <developers>
